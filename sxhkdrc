# bspwm hotkeys
#

super + alt + Escape
	bspc quit

shift + alt + q 
	bspc window -c

alt + f
	bspc desktop -l next

alt + b
	bspc desktop -B

alt + Tab
	bspc window -f last

alt + apostrophe
	bspc window -s last

alt + {o,i}
    bspc desktop --rotate {90,270}

shift + alt + {o,i}
    bspc window --rotate {90,270}

alt + {h,j,k,l}
    bspc window -f {left,down,up,right}

alt + shift + {h,j,k,l}
    bspc window -s {left,down,up,right}

alt + {comma,period}
	bspc desktop -C {backward,forward}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

alt + {v,semicolon}
    bspc window --presel {down,right}

# Reducing gap on the fly 
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# wm independent hotkeys
#

XF86Audio{Raise,Lower}Volume
    amixer -D pulse sset Master 10%{+,-}

alt + Return
	xterm

alt + space
	dmenu_run

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
